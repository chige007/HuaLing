extends layouts/base

block head
    link(rel="stylesheet", href="/stylesheets/information_center.css")

block body
    .container
        include components/header
        .maxBox(style="padding: 0px 20px;")
            .g-bigTitle 
                .text #{text.title[lang]}

            .searcher
                span #{text.selectLabel[lang]}
                br.br
                .selectWrap
                    select
                        option(value="All") #{text.selectAll[lang]}
