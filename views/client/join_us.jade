extends layouts/base

block head
    link(rel="stylesheet", href="/stylesheets/join_us.css")
block body
    .container
        include components/header
        .maxBox
            .g-bigTitle 
                .text #{text.title[lang]}
            p.g-normalText(style="text-align: center;") !{text.paragraph[lang].replace(/\n/g, '<br>')}

            #recruitments
                each recruit, index in text.recruitments
                    .item(class="#{'recruit_' + index}")
                        .wrap
                            .headline
                                p.big #{recruit.name[lang]}
                                if (lang != 'en')
                                    p.small #{recruit.name['en']}
                                .redLine
                            .content
                                p.label #{lang == 'cn' ? '职位信息' : lang == 'hk' ? '職位資訊' : 'Position Information'}
                                p.detail !{recruit.detail[lang].replace(/\n/g, '<br>')}

        include components/footer
