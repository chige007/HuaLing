extends layouts/base

block head
    link(rel="stylesheet", href="/stylesheets/management_team.css")
block body
    .container
        include components/header
        .maxBox(style="max-width: 1020px")
            .g-bigTitle 
                .text #{text.title[lang]}
            p.g-normalText(style="text-align: center;") #{text.paragraph[lang]}

            #teamList
                each mode, index in text.modes
                    .item
                        img(src="#{mode.img}", alt="image")
                        p.mainText #{lang == 'en' ? mode.name['en_s'] || mode.name['en'] : mode.name[lang]}
                        if (lang != 'en')
                            p.subText #{mode.name['en']}
                        .redLine
                        p.introduction #{mode.introduction[lang]}

        include components/footer
