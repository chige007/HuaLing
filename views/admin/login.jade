extends layouts/base

block style_pre
    link(rel="stylesheet", href="/stylesheets/admin/login.css")
block body
    #APP
        .container
            .loginBox
                .left
                    .logo
                        img(src="/images/icon_logo_b.png", alt="华岭logo")
                        p 官网后台管理系统
                .right
                    .wrap
                        .title 用户登录
                        .inputGroup
                            img(src="data:image/png;base64,", alt="华岭图片", srcset="")
                            input(type="text", v-model="username", autofocus, placeholder="请输入用户名", @keyup.13="login")
                        .inputGroup
                            img(src="data:image/png;base64,", alt="华岭图片", srcset="")
                            input(type="password", v-model="password", placeholder="请输入密码", @keyup.13="login")
                        .passwordOpt
                            label.remember
                                input(type="checkbox", v-model="rememberPwd")
                                span 记住密码
                        button.loginBtn(type="button", @click="login") 登　录
        .tipsBox(v-cloak, :class="{show: requestMsg}") {{requestMsg}}

        #g-loading(v-show="loading")
            .wrap
                .bar
                .bar
                .bar
                .bar
                .bar
                p 拼命加载中...

block script_sub
    script(src="/javascripts/admin/vue.js")
    script(src="/javascripts/admin/login.js")